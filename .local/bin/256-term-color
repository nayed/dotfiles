#!/usr/bin/env ruby

####################################################
# This script display the 256 colors available     #
# on some terminals and terminals emulators        #
####################################################

0.upto(15) do |i|
  0.upto(15) do |j|
    code = (i * 16 + j).to_s
    printf " \u001b[38;5;#{code}m#{code.ljust(4)}"
  end
  puts "\u001b[0m"
end
